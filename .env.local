# Local Development Environment Configuration for Laragon
# Copy this to your configuration as needed

# Application Settings
APP_URL=http://chat.mdriaz.local
FORCE_HTTPS=false
APP_MODE=Debug
SITE_TITLE=Team Chat - Local Dev
TIMEZONE=Asia/Dhaka

# Database Configuration (Laragon MySQL)
DB_HOST=localhost
DB_TYPE=mysql
DB_USER=root
DB_PASS=
DB_NAME=chat
DB_PORT=3306

# Redis Configuration (Laragon Redis)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# WebSocket Server Configuration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8080

# Security Settings
ALLOWED_ORIGINS=["http://chat.mdriaz.local", "http://localhost", "http://127.0.0.1"]
ALLOW_FORGET_PASSWORD=true
ALLOW_REGISTRATION=true
TOKEN_EXPIRATION=-60 minutes

# Pagination
PAGINATION_LIMIT=20
